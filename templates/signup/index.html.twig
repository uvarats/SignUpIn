<html>
<head>
    <title>Sign Up</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link href="css/style.css" rel="stylesheet">
    {% endblock %}
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.0.0-alpha.1/axios.min.js"></script>
        <script src="js/errors.js"></script>
        <script src="js/signup.js"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    {% if not session['login'] %}
        <div class="container d-flex justify-content-center">
            <form id="signupForm">
                <div class="form-floating mb-3" id="login">
                    <input type="text" class="form-control" id="loginField" name="login" placeholder="Login" required>
                    <label for="loginField">Login</label>
                    <div class="text-danger errors ms-2"></div>
                </div>
                <div class="form-floating mb-3" id="name">
                    <input type="text" class="form-control" id="nameField" name="name" placeholder="Name" required>
                    <label for="nameField">Name</label>
                    <div class="text-danger errors ms-2 mt-2"></div>
                </div>
                <div class="form-floating mb-3" id="email">
                    <input type="email" class="form-control" id="emailField" name="email" placeholder="Email" required>
                    <label for="emailField">Email</label>
                    <div class="text-danger errors ms-2 mt-2"></div>
                </div>
                <div class="d-flex flex-column mb-3" id="password">
                    <div class="d-flex flex-row">
                        <div class="form-floating">
                            <input type="password" class="form-control" id="passwordField" name="password" placeholder="Password" required>
                            <label for="passwordField">Password</label>
                        </div>
                        <div class="form-floating ms-3">
                            <input type="password" class="form-control" id="passwordConfirmationField" name="passwordConfirmation" placeholder="Password confirmation" required>
                            <label for="passwordConfirmationField">Password confirmation</label>
                        </div>
                    </div>
                    <div class="text-danger errors ms-2 mt-2"></div>
                </div>
                <div class="text-center mb-3">
                    <a href="/signin">Already registered?</a>
                </div>
                <button type="button" class="btn btn-lg btn-primary w-100" id="submitBtn">Register</button>
            </form>
        </div>
    {% else %}
        <span>Hello, {{ session['name'] }}!</span>
        <a href="/logout">Logout</a>
    {% endif %}

{% endblock %}
</body>
</html>